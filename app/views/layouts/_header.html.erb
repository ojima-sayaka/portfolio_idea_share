<header>
  <div class="row justify-content-center">
    <%= link_to root_path, :style => "color: #000000;", class:"navbar-brand" do %>
      <h2><%= image_tag '01228-tmb', size: "30x30" %><span>ながのcake</span></h2>
    <% end %>
  </div>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse" id="navbarNavDropdown">
  <ul class="navbar-nav mr-auto justify-content-start">

<!--会員がログインした場合-->
    <% if member_signed_in? %>
      <li>
        <p class="logincustomer nav-link text-light">ようこそ<%= current_member.name %>さん！%></p>
      </li>
      <li>
        <%= link_to members_member_path(current_member.id), class: "nav-link text-light" do %>
          マイページ
        <% end %>
      </li>
      <li>
        <%= link_to members_members_path, class: "nav-link text-light" do %>
          会員一覧
        <% end %>
      </li>
      <li>
        <%= link_to  members_ideas_path, class: "nav-link text-light" do %>
          投稿一覧
        <% end %>
      </li>
      <li>
        <%= link_to admin_root_path, class: "nav-link text-light" do %>
          管理者
        <% end %>
      </li>
      <li>
        <%= link_to destroy_member_session_path,method: :delete, class: "nav-link text-light" do %>
          <i class="fas fa-sign-out-alt "></i>ログアウト
        <% end %>
      </li>
<!--管理者がログインした場合-->
      <% elsif admin_signed_in? %>
        <li class"nav-item">
          <%= link_to admin_members_path, class: "btn btn-dark" do %>
            会員一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_ideas_path, class: "btn btn-dark" do %>
            投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_categorys_path, class: "btn btn-dark" do %>
            カテゴリー
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-dark" do %>
            ログアウト
          <% end %>
        </li>

        <% else %>
          <li>
            <%= link_to about_path, class: "nav-link text-light" do %>
              About
            <% end %>
          </li>
          <li>
            <%= link_to new_member_session_path, class: "nav-link text-light" do %>
              ログイン
            <% end %>
          </li>
          <li>
            <%= link_to new_member_registration_path, class: "nav-link text-light" do %>
              新規登録
            <% end %>
          </li>
  </ul>
  <!--検索-->
  <%#= form_with url: search_path, local: true, method: :get, class: "form-inline justify-content-end" do |f| %>
    <%#= f.text_field :name, class: "form-control mr-sm-2" %>
    <%= f.submit "検索", class: "btn btn-danger" %>
  <%# end %>
  </div>
</header>