<h2 class="mt-3">新規投稿</h2>
<%= form_with model: idea,url: members_ideas_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :カテゴリー %>
    <%= f.select :category_id, Category.all.map { |category| [category.name, category.id] }, {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :投稿内容 %>
    <%= f.text_area :idea_detail, class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="col-md-5 mx-auto">
      <%= f.submit '投稿',class:"btn btn-success btn-block" %>
    </div>
  </div>
<% end %>