<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>画像</th>
      <th></th>
      <th>タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% ideas.each do |idea| %>
      <tr>
        <td>
          <%= link_to members_idea_path(idea.member) do %>
            <%= image_tag member.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td></td>
        <td><%= idea.title %></td>
        <td>コメント数: <%= idea.comments.count %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>