<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% ideas.each do |idea| %>
      <tr>
        <td>
          <%= link_to(idea.member) do %>
            <%= image_tag member.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td></td>
        <td><%= idea.title %></td>
        <td>コメント数: <%= idea.idea_comments.count %></td>
        <!--<td id="favorite_buttons_<%#= book.id %>">-->
        <!-- <%#= render "favorites/btn", book: book %>-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>