<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'members/ideas/idea',idea: @ideas, member: current_member %>
      <h2 class="mt-3">！</h2>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>会員一覧</h2>
      <%#= render 'members/member/index',members: @members %>

      <table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <!--表示させる画像（クリックしてからの遷移先は会員詳細ページ）・名前-->
    <% @members.each do |member| %>
      <tr>
        <td>
          <%= link_to members_member_path (member) do %>
            <%= image_tag member.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= member.name %></td>
        <td>
          <% if member_signed_in? && member == current_member %>
      <% unless member.email == "test@example.com" then %>
        <div class="mt-3">
        <%= link_to "退会",member_registration_path, class: "destroy-member", method: :delete, "data-confirm" => "本当に退会しますか？" %>
        </div>
      <% end %>
    <% end %>
        </td>
      </tr>
    <% end %>


  </tbody>
</table>

    </div>
  </div>
</div>